{
    "manifest_version": 3,
    "name": "CursorFlow - Screen Recorder",
    "version": "1.0.0",
    "description": "Intelligent screen recording with automatic cursor-following zoom effects",
    "permissions": [
        "desktopCapture",
        "storage",
        "activeTab",
        "tabs",
        "downloads",
        "scripting"
    ],
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/cursor-tracker.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "CursorFlow Recorder",
        "default_icon": {
            "16": "assets/icons/icon16.svg",
            "32": "assets/icons/icon32.svg",
            "48": "assets/icons/icon48.svg",
            "128": "assets/icons/icon128.svg"
        }
    },
    "icons": {
        "16": "assets/icons/icon16.svg",
        "32": "assets/icons/icon32.svg",
        "48": "assets/icons/icon48.svg",
        "128": "assets/icons/icon128.svg"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "editor/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}