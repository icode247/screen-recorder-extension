{
    "name": "cursorflow-extension",
    "version": "1.0.0",
    "description": "Screen recording extension with intelligent cursor-following zoom effects",
    "main": "src/background/service-worker.js",
    "scripts": {
        "build": "webpack --config webpack.extension.config.js --mode production",
        "build:dev": "webpack --config webpack.extension.config.js --mode development",
        "dev": "webpack --config webpack.extension.config.js --mode development --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix",
        "package": "npm run build && npm run zip",
        "zip": "cd dist && zip -r ../cursorflow-extension.zip . -x '*.DS_Store'",
        "clean": "rimraf dist/",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "lucide-react": "^0.263.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.3.0"
    },
    "devDependencies": {
        "@babel/core": "^7.22.0",
        "@babel/preset-env": "^7.22.0",
        "@babel/preset-react": "^7.22.0",
        "@babel/preset-typescript": "^7.22.0",
        "@eslint/js": "^9.32.0",
        "@types/chrome": "^0.0.243",
        "@types/jest": "^29.5.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "babel-loader": "^9.1.0",
        "concurrently": "^8.2.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.8.0",
        "eslint": "^8.57.1",
        "eslint-plugin-react": "^7.32.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "globals": "^16.3.0",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "mini-css-extract-plugin": "^2.7.0",
        "postcss": "^8.4.0",
        "postcss-loader": "^7.3.0",
        "postcss-preset-env": "^9.0.0",
        "rimraf": "^5.0.0",
        "style-loader": "^3.3.0",
        "ts-jest": "^29.1.0",
        "typescript": "^5.1.0",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.0"
    },
    "keywords": [
        "chrome-extension",
        "screen-recording",
        "cursor-tracking",
        "video-editing",
        "auto-zoom",
        "tutorial-creation"
    ],
    "author": {
        "name": "CursorFlow Team",
        "email": "contact@cursorflow.dev"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/cursorflow/cursorflow-extension.git"
    },
    "bugs": {
        "url": "https://github.com/cursorflow/cursorflow-extension/issues"
    },
    "homepage": "https://cursorflow.dev",
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    }
}
